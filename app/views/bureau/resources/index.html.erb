<h1> Resource: <%= @resource.model %></h1>

<table>
  <thead>
    <tr>
      <% @resource.collection_attributes.each do |attribute| %>
        <th> <%= attribute.to_s %> </th>
      <% end %>

      <% if @resource.is_deletable? %>
        <th>   </th>
      <% end %>
    </tr>
  </thead>

  <tbody>
    <% @resources_records.each do |record| %>
      <tr>
        <% @resource.collection_attributes.each do |attribute| %>
          <td>  <%= record.send(attribute) %> </td>
        <% end %>
        
        <% if @resource.is_deletable? %>
          <td>  <%= link_to 'Destroy', 
                            send("#{@resource.model.to_s.downcase}_path", record.id), 
                            method: :delete  %> </td>
        <% end %>

      </tr>
    <% end %>
  </tbody>

</table>